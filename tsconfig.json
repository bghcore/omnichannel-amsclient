{
    "compilerOptions": {
        "lib": ["es2018", "dom"],
        "incremental": true,
        "sourceMap": true,
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "bundler",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
}
